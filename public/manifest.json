{
  "manifest_version": 2,

  "name": "Duy's Magnet Scraper for Real Debrid",
  "description": "Magnet Scraper for Real Debrid",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/getTabDOM.js"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js"]
  },

  "web_accessible_resources": [
    "fonts/fa-solid-900.woff"
  ],

  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ]
}
